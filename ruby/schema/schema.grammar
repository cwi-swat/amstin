start Schema

Schema ::= "schema" name:id classes:Class*

Class ::= [Class] "class" name:key Parent? fields:Field* "end"

Parent ::= "<" super:Class^

Field ::= [Field] name:key ":" type:Type Multiplicity? Inverse?

Type ::= [Primitive] name:"int"
	| [Primitive] name:"bool"
	| [Primitive] name:"real"
	| [Primitive] name:"str"
	| Class^

// todo? detect enums here
Multiplicity ::= "*" {many=true, optional=true} 
	| "?" {optional=true} 
	| "+" {many=true}

Inverse ::= "/" inverse:Field^
